<div class="container">
  <div class="columns is-centered">
    <div class="column is-half">
      <h1 class="title">Iniciar sesión</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <div class="control has-icons-left">
            <%= f.email_field :email, class: 'input', autocomplete: 'email' %>
            <span class="icon is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <div class="control has-icons-left">
            <%= f.password_field :password, class: 'input', autocomplete: 'current-password' %>
            <span class="icon is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="field is-grouped">
          <div class="control">
            <%= f.submit 'Iniciar sesión', class: 'button is-primary' %>
          </div>

          <% if devise_mapping.registerable? && controller_name != 'registrations' %>
            <div class="control">
              <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'button is-text' %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>

