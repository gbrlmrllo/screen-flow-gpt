<!DOCTYPE html>
<html>
  <head>
    <title>Astrolang</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="columns">
      <% if current_user %>
        <aside class="menu column is-one-fifth has-background-light">
          <p class="menu-label">
            Menu
          </p>
          <ul class="menu-list">
            <% @pages.each do |page| %>
              <li><%= link_to page.title, page_path(page) %></li>
            <% end %>
          </ul>
        </aside>
      <% end %>

      <div class="column">
        <section class="section">
          <div class="container">
            <%= yield %>
          </div>
        </section>
      </div>
    </div>
  </body>
</html>
